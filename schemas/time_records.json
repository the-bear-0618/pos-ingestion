{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.crownpointrestaurant.com/pos/time_records.json",
  "title": "POS TimeRecords Schema",
  "description": "Schema for POS employee time records from the API.",
  "allOf": [ { "$ref": "https://schemas.crownpointrestaurant.com/pos/_base_event.json" } ],
  "properties": {
    "sync_id": { "description": "Sync batch identifier for TimeRecords.", "pattern": "^TimeRecords_\\d{8}_\\d{6}$" },
    "event_type": { "const": "pos.time_records" },
    "table_name": { "const": "pos_time_records" },
    "data": {
      "type": "object",
      "description": "The actual time record data.",
      "properties": {
        "business_date": {
          "type": "string",
          "description": "The business date for the time record, in YYYY-MM-DD format.",
          "format": "date"
        },
        "id": { "type": ["string", "integer"] },
        "employee_object_id": { "type": ["string", "null"], "format": "uuid" },
        "employee_number": { "type": ["integer", "null"] },
        "employee_number2": { "type": ["integer", "null"] },
        "employee_full_name": { "type": ["string", "null"] },
        "employee_first_name": { "type": ["string", "null"] },
        "employee_middle_name": { "type": ["string", "null"] },
        "employee_last_name": { "type": ["string", "null"] },
        "job_object_id": { "type": ["string", "null"], "format": "uuid" },
        "job_name": { "type": ["string", "null"] },
        "job_number": { "type": ["integer", "null"] },
        "shift_number": { "type": ["integer", "null"] },
        "clock_in_time": { "type": "string", "format": "date-time" },
        "clock_out_time": { "type": "string", "format": "date-time" },
        "regular_pay_rate": { "type": "number" },
        "total_hours": { "type": "number" },
        "regular_hours": { "type": "number" },
        "overtime_pay_rate": { "type": "number" },
        "overtime_hours": { "type": "number" },
        "overtime_wages": { "type": "number" },
        "doubletime_hours": { "type": "number" },
        "doubletime_wages": { "type": "number" },
        "credit_card_tips": { "type": ["number", "null"] },
        "declared_tips": { "type": "number" },
        "sales": { "type": ["number", "null"] },
        "site_object_id": { "type": "string", "format": "uuid" },
        "account_object_id": { "type": "string", "format": "uuid" },
        "regular_wages": { "type": "number" },
        "modified_on": { "type": "string", "format": "date-time" },
        "labor_category_name": { "type": ["string", "null"] },
        "labor_category_number": { "type": "integer" },
        "un_paid_break_counts": { "type": "integer" },
        "un_paid_break_minutes": { "type": "integer" },
        "total_hours_unrounded": { "type": "number" },
        "regular_hours_unrounded": { "type": "number" },
        "overtime_hours_unrounded": { "type": "number" },
        "doubletime_hours_unrounded": { "type": "number" },
        "gratuities": { "type": "number" },
        "external_id": { "type": ["string", "null"] }
      },
      "additionalProperties": false,
      "required": []
    }
  }
}